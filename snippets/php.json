{
  "variable": {
    "prefix": "v",
    "body": ["$"],
    "description": "Insert dollar sign"
  },
  "property": {
    "prefix": "vv",
    "body": ["\\$this->$0"],
    "description": "Insert $this->"
  },
  "table": {
    "prefix": "vt",
    "body": ["\\$table->"],
    "description": "Insert $table->"
  },
  "variable arrow": {
    "prefix": "va",
    "body": ["\\$${1}->${2}"],
    "description": "variable arrow accessor"
  },
  "variable double arrow": {
    "prefix": "vaa",
    "body": ["\\$${1}=>${2}"],
    "description": "variable arrow accessor"
  },
  "variable linked list": {
    "prefix": "vl",
    "body": ["'${1}' => \\$${2}"],
    "description": "item linked list"
  },
  "variable linked list with arrow": {
    "prefix": "vla",
    "body": ["'${1}' => \\$${2}->${3}"],
    "description": "item linked list"
  },
  "strict types": {
    "prefix": "strict",
    "description": "Add strict types declaration",
    "body": ["declare(strict_types=1);"]
  },
  "if elseif else": {
    "prefix": "ifelseif",
    "description": "Create if-elseif-else statement",
    "body": [
      "if (${1:condition}) {",
      "    ${2}",
      "} elseif (${3:condition}) {",
      "    ${4}",
      "} else {",
      "    ${0}",
      "}"
    ]
  },
  "foreach": {
    "prefix": "fore",
    "description": "Create foreach loop",
    "body": ["foreach (${1:\\$array} as ${2:\\$value}) {", "    ${0}", "}"]
  },
  "foreach key value": {
    "prefix": "forek",
    "description": "Create foreach loop with key and value",
    "body": [
      "foreach (${1:\\$array} as ${2:\\$key} => ${3:\\$value}) {",
      "    ${0}",
      "}"
    ]
  },
  "for": {
    "prefix": "for",
    "description": "Create for loop",
    "body": [
      "for (${1:\\$i} = ${2:0}; ${1:\\$i} < ${3:count}; ${1:\\$i}++) {",
      "    ${0}",
      "}"
    ]
  },
  "try catch finally": {
    "prefix": "tryf",
    "description": "Create try-catch-finally block",
    "body": [
      "try {",
      "    ${1}",
      "} catch (${2:\\Exception} ${3:\\$e}) {",
      "    ${4}",
      "} finally {",
      "    ${0}",
      "}"
    ]
  },
  "inv": {
    "prefix": "inv",
    "description": "Create PHP __invoke method",
    "body": [
      "public function __invoke(${1}): ${2:void}",
      "{",
      "    ${3}",
      "}",
      ""
    ]
  },
  "public method": {
    "prefix": "pubf",
    "description": "Create a public method",
    "body": ["public function ${1}(${2})", "{", "    ${0}", "}", ""]
  },
  "protected method": {
    "prefix": "prof",
    "description": "Create a protected method",
    "body": ["protected function ${1}(${2}): ${3}", "{", "    ${0}", "}", ""]
  },
  "private method": {
    "prefix": "prif",
    "description": "Create a private method",
    "body": ["private function ${1}(${2}): ${3}", "{", "    ${0}", "}", ""]
  },
  "public static method": {
    "prefix": "pubsf",
    "description": "Create a public static method",
    "body": [
      "public static function ${1}(${2}): ${3}",
      "{",
      "    ${0}",
      "}",
      ""
    ]
  },
  "pest test (it) method": {
    "prefix": "it",
    "description": "Create a pest test",
    "body": [
      "it('${1}', function () {",
      "    // Arrange",
      "    ${0}",
      "",
      "    // Act",
      "",
      "    // Assert",
      "",
      "});"
    ]
  }
}
